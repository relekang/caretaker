{
  "name": "caretaker",
  "version": "1.0.0-rc.0",
  "description":
    "A tiny script written in reason that will send you nice notifications to make you take care of you.",
  "esy": {
    "build": "dune build -p <PACKAGE_NAME>",
    "buildDev": "pesy",
    "release": { "releasedBinaries": [ "CaretakerApp.exe" ] }
  },
  "buildDirs": {
    "executable": {
      "require": [ "cmdliner", "pastel.lib", "console.lib" ],
      "main": "Caretaker",
      "name": "Caretaker.exe"
    }
  },
  "scripts": { "pesy": "bash -c 'env PESY_MODE=update pesy'" },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/cmdliner": "1.0.4",
    "@opam/dune": ">=1.6.0",
    "@reason-native/console": "^0.1.0",
    "@reason-native/pastel": "^0.2.1",
    "ocaml": "^4.4.0"
  },
  "devDependencies": {
    "ocaml": "4.7.1004",
    "refmterr": "*",
    "pesy": "*",
    "@opam/merlin": "*"
  }
}